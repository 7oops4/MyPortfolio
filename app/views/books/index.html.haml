.header
  .header__left
    .header__left__user-info
      .header__left__user-info__name
        = link_to current_user.name, root_path
      .header__left__user-info__image
        .fas.fa-user
  .header__center
  .header__right
    = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'logout-btn'
    = link_to new_books_search_path do
      .book-keyword_search-btn キーワード検索
    = link_to new_book_path do
      .book-regist-btn 登録

.nav-main
  .nav-left
    .nav-left__title
      %p Book&nbsp;Shelf
    .nav-left__book-counter
      総登録数：
      = @total
      冊
  .nav-right

.book-content
  .bookshelf
    .bookshelf-record
      .bookshelf-head
      .bookshelf-back
      .bookshelf-floor

      .bookshelf-record
        .bookshelf-head
        .bookshelf-back
        .bookshelf-floor

      .bookshelf-record
        .bookshelf-head
        .bookshelf-back
        .bookshelf-floor

  .book-content__list
    %ul.book-content__list__shelf
      - @books.each do |book|
        %li.book-item-block
          = link_to book_path(book) do
            - if book[:image] != ""
              = image_tag book[:image], alt: "本の画像", class: "book-item-block__image"
            - else
              = image_tag "/assets/no_image.jpg", alt: "本の画像", class: "book-item-block__image"
            .book-item-block__nav
              .book-item-block__nav__title
                = book[:title]
              .book-item-block__nav__pages
                - if book[:already_read_page_count] != nil
                  - already_read_page_count = book[:already_read_page_count].to_s
                - else
                  - already_read_page_count = "0"
                - total_page_count = book[:total_page_count].to_s
                = already_read_page_count + "/" + total_page_count

.pagenate
  = paginate @books

